# MedIntel Backend Configuration
# Copy this file to .env and update with your values

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True

# Database
DATABASE_URL=postgresql://localhost/medintel
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=medintel

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# External APIs
OPENFDA_API_KEY=your-fda-api-key-here

# OCR Settings
OCR_ENABLED=True
TESSERACT_PATH=/usr/bin/tesseract

# Logging
LOG_LEVEL=INFO
